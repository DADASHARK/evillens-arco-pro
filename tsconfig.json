{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "types": ["vite/client", "vue", "d3"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
